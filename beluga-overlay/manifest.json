{
  "manifest_version": 3,
  "name": "Beluga Overlay",
  "version": "1.0.0",
  "description": "A small beluga whale swims across the top of every webpage (not the browser UI).",
  "action": {
    "default_title": "Beluga Overlay"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["whale.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
